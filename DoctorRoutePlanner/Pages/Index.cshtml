@page
@model IndexModel
@using System.Text.Json;
@using DoctorRoutePlanner.Models;
@{
    ViewData["Title"] = "Doctor Route Planner";

    var options = new JsonSerializerOptions
    {
        PropertyNamingPolicy = JsonNamingPolicy.CamelCase
    };
}


<div class="container-fluid py-4">
    @*<div class="row mb-4">
        <div class="col">
            <h1 class="display-5">🩺 Doctor Route Planner</h1>
        </div>
    </div>*@

    <div class="row">
        <!-- Left Panel: Input + Summary -->
        <div class="col-md-4">
            <div class="card mb-3">
                @if (!ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }

                @if (Model.Appointments?.Count > 0)
                {
                    <div class="card mb-3" style="height: 500px;">
                        <div class="card-header">🧾 Scheduled Appointments</div>
                        <div class="card-body p-0" style="overflow-y: auto; height: calc(100% - 56px);">
                            <ul class="list-group list-group-flush">
                                @foreach (var appt in Model.Appointments.OrderBy(a => a.WindowStart))
                                {
                                    <li class="list-group-item appointment-item" id="appt-@appt.PatientId">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@appt.PatientName</strong> (@appt.PatientId)<br />
                                                Time Window: @appt.WindowStart.ToShortTimeString() – @appt.WindowEnd.ToShortTimeString()<br />
                                                Duration: @appt.Duration<br /><br />
                                                <em>Notes:<br />@appt.Notes</em>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <label class="form-check-label me-2">
                                                @*<input type="checkbox" class="form-check-input mark-complete" data-patient-id="@appt.PatientId" />*@
                                                <input type="checkbox" class="form-check-input mark-complete"
                                                       data-patient-id="@appt.PatientId"
                                                       @(IndexModel.DoctorNotesMemory.GetValueOrDefault(appt.PatientId)?.Completed == true ? "checked" : "") />

                                                Completed
                                            </label>
                                            <br />
                                            <label class="form-check-label me-2">
                                                @*<input type="checkbox" class="form-check-input mark-incomplete" data-patient-id="@appt.PatientId" />*@
                                                <input type="checkbox" class="form-check-input mark-incomplete"
                                                       data-patient-id="@appt.PatientId"
                                                       @(IndexModel.DoctorNotesMemory.GetValueOrDefault(appt.PatientId)?.Completed == false ? "checked" : "") />

                                                Not Completed
                                            </label>

                                            <button type="button" class="btn btn-sm btn-primary mt-1 toggle-notes" data-target="notes-@appt.PatientId">Notes</button>
                                        </div>

                                        <div id="notes-@appt.PatientId" class="note-section mt-2" style="display:none;">
                                            <textarea class="form-control doctor-note" rows="2" data-patient-id="@appt.PatientId"
                                                      placeholder="Enter notes...">@IndexModel.DoctorNotesMemory.GetValueOrDefault(appt.PatientId)</textarea>
                                            <button type="button" class="btn btn-sm btn-primary mt-1 save-note">Save Notes</button>
                                            <span class="note-status text-success ms-2" style="display:none;">✔ Saved</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <br />
                    <div id="export-container" style="padding: 10px; display: @(IndexModel.DoctorNotesMemory.Any(kvp => !string.IsNullOrWhiteSpace(kvp.Value.Notes)) ? "block" : "none")">
                        <form method="post" asp-page-handler="ExportNotes">
                            <button type="submit" class="btn btn-success">Export All Notes</button>
                        </form>
                    </div>
                }
                else
                {

                    <div class="card-header">📋 Add appointments in JSON format</div>
                    <div class="card-body">
                        <form method="post">
                            <textarea class="form-control mb-2" name="JsonInput" rows="8" placeholder="Paste JSON here...">@Model.JsonInput</textarea>
                            <button class="btn btn-primary w-100">Plan Route</button>
                        </form>

                    </div>
                }
            </div>

            <div class="card mb-3">
                <div class="card-header">📍 Route Summary</div>
                <div class="card-body">
                    <p>Total Distance: <strong id="distance">--</strong></p>
                    <p>Estimated Time: <strong id="eta">--</strong></p>
                    <label class="form-label me-2">Distance Unit:</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="distanceUnit" value="mi" checked>
                        <label class="form-check-label">Miles</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="distanceUnit" value="km">
                        <label class="form-check-label">Kilometers</label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Panel: Map -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">🗺️ Route Map</div>
                <div class="card-body p-0">
                    <div id="map" style="height: 500px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-routing-machine/dist/leaflet-routing-machine.min.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine/dist/leaflet-routing-machine.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-polylinedecorator/1.1.0/leaflet.polylineDecorator.min.js"></script>

    @inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
    @{
        var routePoints = Model.RoutePoints != null
            ? Model.RoutePoints.Select(p => new { lat = p.Latitude, lng = p.Longitude })
            : Enumerable.Empty<object>();

        var routePointsJson = JsonSerializer.Serialize(routePoints);
    }

    <script>
        const antiForgeryToken = '@Antiforgery.GetAndStoreTokens(HttpContext).RequestToken';
        const routeData = @Html.Raw(JsonSerializer.Serialize(Model.RoutePoints ?? new List < RoutePoint > (), options));

        window.routePoints = @Html.Raw(routePointsJson);

    </script>

    <script src="~/js/app.js"></script>
}